<h1><em><%=currentUser.name %></em></h1>
<h2>add a new POST</h2>
<form action="/post" method="POST">
        <input type="text" name="text" placeholder="New post">
        <input type="text" name="image" placeholder="Image">
        <button>Submit</button>
</form>


<a href="/logout">Logout</a>

<% for(let i=currentUser.posts.length-1; i>=0; i--){ %>
        
        <p><%= currentUser.posts[i].text %>                 <%= currentUser.posts[i].createdAt %></p>                     
        <p><img src="<%= currentUser.posts[i].image %>" ></p>
        <hr>
<%}%>